<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gameplaywithbluetoothnetworking13"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- MainActivity -->
        <activity
            android:name="com.example.gameplaywithbluetoothnetworking13.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- DeviceList -->
        <activity
            android:name=".DeviceListActivity"
            android:label="select_device"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Dialog" />

        <!-- Gameplay -->
        <activity
            android:name="com.example.screenformaingameplayv13.GameplaActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>

        <!-- GameplayForStupidSamsung -->
        <activity
            android:name="com.example.screenformaingameplayv13.GameplaActivityForStupidSamsung"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>